datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  sdt       String   @unique
  dob       DateTime
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Material {
  id                     Int      @id @default(autoincrement())
  name                   String
  category               String
  recyclingCode          String?    // optional
  description            String?
  points                 Int
  recyclingInstructions  String?
  isHazardous            Boolean    @default(false)
  createdAt              DateTime   @default(now())
}